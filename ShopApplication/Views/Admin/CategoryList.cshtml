@model CategorytListViewModel

<div class="row">
    <div class="col-md-12">
        <h1>Admin Products</h1>
        <hr />
        <a class="btn btn-outline-dark" href="/admin/categories/create">Add Category</a>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <td style="width:30px;">Id</td>
                    <td style="width:100px;">Name</td>
                    <td style="width:150px;"></td>
                </tr>
            </thead>
            <tbody>
                @if (Model.Categories.Count > 0)
                {
                    @foreach (var item in Model.Categories)
                    {
                        <tr>
                            <td>@item.CategoryId</td>
                            <td>@item.Name</td>                          
                            
                            <td>
                                <a href="/admin/categories/@item.CategoryId" class="btn btn-outline-dark btn-sm mr-2">Edit</a>
                                <form action="/admin/deletecategory" method="post" style="display:inline;">
                                    <input type="hidden" name="productId" value="@item.CategoryId" />
                                    <button type="submit" class="btn btn-outline-dark btn-sm">Delete</button>
                                </form>

                            </td>
                        </tr>
                    }
                }
                else
                {
                    <div class="alert alert-dark">
                        <h3>No Categories</h3>
                    </div>
                }
            </tbody>
        </table>
    </div>
</div>