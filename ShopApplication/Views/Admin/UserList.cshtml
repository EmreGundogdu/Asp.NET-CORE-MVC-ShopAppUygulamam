@model IEnumerable<User>


<div class="row">
    <div class="col-md-12">
        <h1 class="h3">User List</h1>
        <hr>
        <a class="btn btn-outline-dark btn-sm" href="/admin/user/create">Create User</a>
        <table class="table table-bordered mt-3">
            <thead>
                <tr>
                    <td>First Name</td>
                    <td>Last Name</td>
                    <td>User Name</td>
                    <td>Email</td>
                    <td>Email Confirmed</td>
                    <td style="width: 160px;"></td>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count() > 0)
                {
                    @foreach (var item in Model)
                    {
                        <tr class="@(item.EmailConfirmed?"":"bg-warning")">
                            <td>@item.FirstName</td>
                            <td>@item.LastName</td>
                            <td>@item.UserName</td>
                            <td>@item.Email</td>
                            <td>@item.EmailConfirmed</td>
                            <td>
                                <a href="/admin/user/@item.Id" class="btn btn-dark btn-sm mr-2">Edit</a>

                                <form action="/admin/user/delete" method="POST" style="display: inline;">
                                    <input type="hidden" name="UserId" value="@item.Id">
                                    <button type="submit" class="btn btn-dark btn-sm">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <div class="alert alert-warning">
                        <h3>No Users</h3>
                    </div>
                }

            </tbody>
        </table>
    </div>
</div>