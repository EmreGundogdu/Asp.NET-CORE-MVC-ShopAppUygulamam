@model Product



<div class="row">
    <div class="col-md-3">
        <img src="~/images/@Model.ImageUrl" class="img-fluid" />
    </div>
    <div class="col-md-9">

        <h1 class="mb-3">@Model.Name</h1> <hr />
        <a href="#" class="btn btn-link p-0 mb-3">Telefon | Elektronik</a>
        <div class="mb-3">
            <h4 class="text-dark mb-3">
                <i class="fas fa-lira-sign"></i>@Model.Price
            </h4>
            <button type="submit" class="btn btn-dark btn-lg">Add To Cart</button>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <p class="p-3">@Model.Description</p>
    </div>
</div>
