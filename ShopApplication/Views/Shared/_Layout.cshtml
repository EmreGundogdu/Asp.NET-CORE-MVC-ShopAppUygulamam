 <!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ShopApplication</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/style.css" />
</head>
<body>
    @if (IsSectionDefined("MessageBox")) /*cshtml uzantılı dosyalarda Messagebox tanımı yaplışmsa*/
    {
        @RenderSection("MessageBox")
    }


    <partial name="_navbar" />
    @RenderSection("Header",false)
    @if (IsSectionDefined("Jumbotron"))
    {
        @RenderSection("Jumbotron")
    }    
    <main class="my-5">
        <div class="container mt-5">
            @if (IsSectionDefined("Categories"))
            {
                <div class="row">
                    <div class="col-md-3">@RenderSection("Categories")</div>
                    <div class="col-md-9">@RenderBody()</div>
                </div>
            }
            else
            {
                <div class="row">
                    <div class="col-md-12">@RenderBody()</div>
                </div>
            }
        </div>
    </main>
    <footer class="py-5 bg-dark text-white text-center">Shop App | 2021</footer>
    <script src="https://code.jquery.com/jquery-3.4.1.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    @RenderSection("Scripts", false) <!--İf koşuluna göre yazılmaması, sonuna da require mı değilmi onun için true false yazabiliriz.Her sayfada gözükmemesi için false-->
</body>
</html>
