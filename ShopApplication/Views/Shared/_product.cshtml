@model Product

<div class="card my-4">
    <img class="card-img-top my-2" src="~/images/@Model.ImageUrl" />
    <div class="card-body" style="justify-content:center">
        <h5 class="card-title">@Model.Name</h5>
        <small class="text-muted">
            <i class="fas fa-lira-sign"></i>@Model.Price
        </small>
    </div>
    <div class="card-footer text-center">
        <a asp-controller="shop" asp-action="Details" asp-route-url="@Model.Url" class="btn btn-dark btn-sm">Details</a>
        @if (User.Identity.IsAuthenticated)
        {
            <form asp-controller="Cart" asp-action="AddToCart" method="post" style="display:inline;">
                <input type="hidden" name="productId"  value="@Model.ProductId"/>
                <input type="hidden" name="quantity" value="1" />
                <button class="btn btn-dark btn-sm" type="submit">Add to Cart</button>
            </form>
        }
    </div>
</div>